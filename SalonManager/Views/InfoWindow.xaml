<Window x:Class="SalonManager.Views.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="資料編輯視窗" Width="460" Height="770">
    <Grid>
        <Frame Name="PageFrame" Margin="10"/>
        <StackPanel Orientation="Horizontal" Margin="10" Width="420" Height="700">
            <Button Content="儲存" HorizontalAlignment="Left" Margin="5" Name="SaveButton" VerticalAlignment="Bottom" Foreground="Black" BorderBrush="Green" Background="GreenYellow" Click="SaveButton_Click" Height="Auto" FontSize="18" />
            <Button Content="取消" HorizontalAlignment="Left" Margin="5" Name="CancelButton" VerticalAlignment="Bottom" Foreground="White" BorderBrush="Black" Background="Red" Click="CancelButton_Click" FontSize="18" Height="Auto" />
        </StackPanel>
    </Grid>
</Window>
