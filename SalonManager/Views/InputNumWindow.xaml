<Window x:Class="SalonManager.Views.InputNumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="InputNumWindow" Height="150" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="輸入數字" Name="Input" Style="{StaticResource InfoTxtStyle}" FontSize="18" Width="74"/>
                <TextBox Name="InputText" FontSize="18"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="確定" Margin="5" Name="SaveButton" Foreground="Black" BorderBrush="Green" Background="GreenYellow" Click="SaveButton_Click" FontSize="18" Height="Auto"/>
                <Button Content="取消" Margin="5" Name="CancelButton" Foreground="White" BorderBrush="Black" Background="Red" Click="CancelButton_Click" FontSize="18" Height="Auto" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
