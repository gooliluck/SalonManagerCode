<Window x:Class="SalonManager.Views.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="密碼確認視窗"
        Closing="Window_Closing"
        Height="150" Width="300" FontSize="18" Background="#FFF7F7F7">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="輸入密碼" Name="PasswordText" Width="100" FontSize="18"/>
                <!--<TextBox Name="Password" Width="150" Margin="0"/>-->
                <PasswordBox Name="Password" Width="150" Margin="0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Padding="20 0" Margin="10 0" Click="ConfirmPassword" FontSize="18">確定</Button>
                <Button Padding="20 0" Margin="10 0" Click="Cancel" FontSize="18">取消</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
